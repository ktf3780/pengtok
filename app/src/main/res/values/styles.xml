<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">#828282</item>
        <item name="colorControlNormal">#aabbcc</item>
        <item name="colorControlActivated">#aabbcc</item>
        <item name="colorControlHighlight">#aabbcc</item>
        <item name="android:textColorHighlight">#aabbcc</item>

    </style>
</resources>